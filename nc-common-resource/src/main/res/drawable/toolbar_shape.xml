<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="@dimen/dimens_recommend_controller_radius"
        android:bottomRightRadius="@dimen/dimens_recommend_controller_radius"
        android:topLeftRadius="@dimen/dimens_recommend_controller_radius"
        android:topRightRadius="@dimen/dimens_recommend_controller_radius" />


    <!-- 宽度和高度 -->
    <size
        android:width="257dp"
        android:height="28dp" />

    <!-- 填充的颜色 -->
    <solid android:color="@color/color_bg_top_white" />

    <!-- 描边 -->
    <stroke
        android:width="0.5dp"
        android:color="@color/color_bg_top_red"
        android:dashGap="0dp"
        android:dashWidth="1dp" />

</shape>