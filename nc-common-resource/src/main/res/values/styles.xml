<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 更改主题必须隐藏原来的ActionBar -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--下面两个属性是5.0之后出现的，可以在Values21专属包下创建styles或者直接用colorPrimary两属性，不用加上android:前缀-->
        <item name="colorPrimary">@color/color_bg_top_red</item>
        <item name="colorPrimaryDark">@color/color_bg_top_red</item>
        <item name="android:windowBackground">@color/color_padding_chatlist</item>
        <item name="android:textColorPrimary">@color/color_bg_white</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <!-- wrap style-->
    <style name="styles_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- match style-->
    <style name="styles_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- vertical style-->
    <style name="styles_gravity_vertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>