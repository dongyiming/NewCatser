<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_item_title_height"
        android:background="@color/color_padding_chatlist">

        <ImageView
            android:id="@+id/img_left"
            style="@style/styles_wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dimens_item_header_magintop"
            android:src="@drawable/img_header_left" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/styles_wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/common_lh_22"
            android:layout_marginLeft="@dimen/dimens_item_title_maginleft"
            android:hint="@string/activity_bottom_button1_str"
            android:textColor="@color/color_chatlist_item_desc"
            android:textSize="@dimen/common_sz_15" />

        <ImageView
            style="@style/styles_wrap_content"
            android:layout_marginLeft="@dimen/dimens_item_arrors_maginleft"
            android:layout_marginTop="@dimen/common_lh_26"
            android:layout_toRightOf="@id/txt_title"
            android:src="@drawable/img_item_title_arrows" />

    </RelativeLayout>
</LinearLayout>