<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_recommend_sort_item_height"
    android:background="@color/color_padding_chatlist">


    <TextView
        android:id="@+id/txt_name"
        style="@style/styles_wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_recommend_sort_item_maginleft"
        android:textColor="@color/color_chatlist_item_desc"
        android:textSize="@dimen/common_sz_13" />

    <RelativeLayout
        android:id="@+id/rlayout_drag"
        android:layout_width="@dimen/dimens_recommend_sort_item_drag_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            style="@style/styles_wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/img_sort_item" />
    </RelativeLayout>
</RelativeLayout>