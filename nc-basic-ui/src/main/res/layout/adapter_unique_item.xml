<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_padding_chatlist"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_latest_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_latest_item_desc_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_menu_name"
            style="@style/styles_wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/color_bg_top_black"
            android:textSize="@dimen/common_sz_12" />

        <TextView
            android:id="@+id/txt_menu_author"
            style="@style/styles_wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/color_gray_text"
            android:textSize="@dimen/common_sz_11" />

    </LinearLayout>
</LinearLayout>