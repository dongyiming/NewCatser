<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/dimes_cardview_maginleft"
    android:layout_marginRight="@dimen/dimes_cardview_maginleft"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/color_bg_item">
    <!--CardView和下面几个参数必须直接用具体参数，用引用会无效-->
    <RelativeLayout
        android:id="@+id/rlayout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        >

        <RelativeLayout
            android:layout_width="222dp"
            android:layout_height="46dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="11dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="小四的有些快乐慢慢体会好好的阿德阿斯顿"
                android:textColor="@color/color_bg_top_black"
                android:textSize="@dimen/common_sz_16"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="82dp"
            android:layout_height="72dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>