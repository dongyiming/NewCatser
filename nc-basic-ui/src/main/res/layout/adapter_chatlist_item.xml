<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_item_img_height">

        <ImageView
            android:id="@+id/img_chatlist_item"
            style="@style/styles_wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/img_chatlist_item_default" />

        <TextView
            android:id="@+id/txt_playcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/adapter_item_play_maginright"
            android:layout_marginTop="@dimen/adapter_item_desc_maginleft"
            android:hint="68811"
            android:textColor="@color/color_bg_white"
            android:textSize="@dimen/common_sz_9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_playcount"
            android:layout_marginRight="@dimen/adapter_item_play_paddingright"
            android:layout_toLeftOf="@id/txt_playcount"
            android:src="@drawable/img_chatlist_item_playcount" />

        <ImageView
            android:id="@+id/img_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/common_lh_8"
            android:layout_marginLeft="@dimen/common_lh_6"
            android:src="@drawable/img_chatlist_user" />

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_lh_8"
            android:layout_marginLeft="@dimen/common_lh_2"
            android:layout_toRightOf="@id/img_author"
            android:hint="去爱吧像从来没受伤一样"
            android:textColor="@color/color_bg_white"
            android:textSize="@dimen/common_sz_12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_item_desc_height"
        android:layout_below="@id/rl_top">

        <TextView
            android:id="@+id/txt_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adapter_item_desc_maginleft"
            android:layout_marginTop="@dimen/adapter_item_desc_magintop"
            android:hint="从我的前半生去看那些现实题材国产剧"
            android:maxEms="12"
            android:textColor="@color/color_chatlist_item_desc"
            android:textSize="@dimen/common_sz_13" />
    </RelativeLayout>
</LinearLayout>