<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_padding_chatlist"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_latest_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="menuImage"
            android:src="@drawable/img_default_357_357" />

        <TextView
            android:id="@+id/txt_playcount"
            style="@style/styles_wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/adapter_item_play_maginright"
            android:layout_marginTop="@dimen/common_lh_2"
            android:textColor="@color/color_bg_white"
            android:textSize="@dimen/common_sz_12"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_playcount"
            style="@style/styles_wrap_content"
            android:layout_marginRight="@dimen/adapter_item_play_paddingright"
            android:layout_marginTop="@dimen/adapter_item_desc_maginleft"
            android:layout_toLeftOf="@id/txt_playcount"
            android:src="@drawable/img_chatlist_item_playcount"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_videoname"
            style="@style/styles_wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />

        <ImageView
            style="@style/styles_wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_latest_item_desc_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_menu_name"
            style="@style/styles_wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/color_bg_top_black"
            android:textSize="@dimen/common_sz_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_menu_desc"
            style="@style/styles_wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_bg_top_black"
            android:textSize="@dimen/common_sz_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_menu_author"
            style="@style/styles_wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/color_gray_text"
            android:textSize="@dimen/common_sz_11"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>