<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rollpager_height_dimens">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/rollpager_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rollviewpager_hint_color="@color/color_bg_white"
            app:rollviewpager_play_delay="3000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimes_news_title_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimes_news_title_marginleft"
            android:text="@string/fragment_news_title"
            android:textColor="@color/color_list_title"
            android:textSize="@dimen/common_sz_14" />
    </RelativeLayout>
</LinearLayout>