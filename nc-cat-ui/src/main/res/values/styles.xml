<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================================================================================================================== -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_bg_homepage_bottom</item>
        <item name="colorPrimaryDark">@color/color_bg_homepage_bottom</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- 溢出菜单图标自定义，引用style里添加图标-->
        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
        <!-- 加入toolbar溢出【弹出】菜单的风格 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <!-- toolbar标题文字大小 app:titleTextAppearance="@style/ToolbarTitleSize" -->
    <style name="ToolbarTitleSize" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/common_sz_17</item>
        <item name="android:textColor">@color/color_bg_white</item>
    </style>

    <!-- toolbar sub标题文字大小 app:subtitleTextAppearance="@style/ToolbarTitleSize" -->
    <style name="ToolbarSubTitleSize" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/common_sz_10</item>
        <item name="android:textColor">@color/color_gray_text</item>
    </style>

    <!--修改配置使弹出菜单 需添加到appTheme中再布局使用app:popupTheme="@style/OverflowMenuStyle" parent可要可不要-->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/common_sz_15</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/color_bg_white</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <!--<item name="android:dropDownVerticalOffset">5dp</item>-->
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <!--<item name="android:dropDownHorizontalOffset">0dp</item>-->
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/color_bg_top_black</item>
    </style>

    <!-- ================================================================================================================== -->

    <style name="MenuFunction">
        <item name="android:layout_width">@dimen/dimens_menu_function_widht</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MenuFunctionIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimens_menu_function_img_magintop</item>
    </style>
    <style name="MenuFunctionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/color_bg_top_white</item>
        <item name="android:textSize">@dimen/common_sz_13</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>